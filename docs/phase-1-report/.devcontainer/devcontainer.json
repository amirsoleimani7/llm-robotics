{
  "name": "XeLaTeX Persian Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "latex-workshop.latex.recipes": [
      { "name": "xelatex", "tools": ["xelatex"] },
      { "name": "latexmk (xelatex)", "tools": ["latexmk"] }
    ],
    "latex-workshop.latex.tools": [
      {
        "name": "xelatex",
        "command": "xelatex",
        "args": ["-interaction=nonstopmode", "%DOCFILE%"]
      },
      {
        "name": "latexmk",
        "command": "latexmk",
        "args": [
          "-xelatex",
          "-interaction=nonstopmode",
          "-synctex=1",
          "%DOC%"
        ]
      }
    ]
  },
  "extensions": [
    "James-Yu.latex-workshop"
  ],
  "remoteUser": "root"
}
